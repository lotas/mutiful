<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/checkbox_padding" android:left="@dimen/checkbox_padding" android:right="@dimen/checkbox_padding" android:top="@dimen/checkbox_padding" />
            <stroke android:color="@color/checkbox_unchecked_border_color" android:width="1dp" />
            <solid android:color="@color/transparent"></solid>
            <corners android:radius="32dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/checkbox_padding" android:left="@dimen/checkbox_padding" android:right="@dimen/checkbox_padding" android:top="@dimen/checkbox_padding" />
            <stroke android:color="@color/checkbox_checked_border_color" android:width="1dp" />
            <solid android:color="@color/transparent"></solid>
            <corners android:radius="32dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/checkbox_padding" android:left="@dimen/checkbox_padding" android:right="@dimen/checkbox_padding" android:top="@dimen/checkbox_padding" />
            <stroke android:color="@color/yellow_btn_bg" android:width="1dp" />
            <solid android:color="@color/transparent"></solid>
            <corners android:radius="32dp" />
        </shape>
    </item>
</selector>